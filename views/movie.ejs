<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= movie.title %> - BookMyShow Clone</title>
    <link rel="stylesheet" href="/css/movie.css">
</head>
<body>
    <a 
    class="back-button"
    href="/"
    >
        Back
    </a>
    <main>
        <section class="movie-hero">
            <div class="movie-poster">
                <img src="<%= movie.poster %>" alt="<%= movie.title %> Poster">
            </div>
            <div class="movie-info">
                <h1><%= movie.title %></h1>
                <p class="rating">⭐ <%= movie.rating %></p>
                <p class="genre"><%= movie.genre %></p>
                <p class="duration"><%= movie.duration %></p>
                <p class="languages"><%= movie.languages %></p>
                <p style="color: rgb(50, 226, 50);">₹<%= movie.price %></p>
                
                <form id="paymentForm">
                    <button type="submit" class="book-ticket" style="text-decoration: none; color: white;">
                        Book Now
                    </button>
                </form>
            </div>
        </section>

        <section class="movie-details">
            <h2>About the movie</h2>
            <p><%= movie.description %></p>
        </section>

        <section class="cast">
            <h2>Cast</h2>
            <div class="cast-list">
                <% movie.cast.forEach(person => { %>
                    <div class="cast-member">
                        <img src="<%= person.image %>" alt="<%= person.name %>">
                        <p><%= person.name %></p>
                        <p class="role"><%= person.role %></p>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="crew">
            <h2>Crew</h2>
            <div class="crew-list">
                <% movie.crew.forEach(person => { %>
                    <div class="crew-member">
                        <img src="<%= person.image %>" alt="<%= person.name %>">
                        <p><%= person.name %></p>
                        <p class="role"><%= person.role %></p>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2025 BookMyShow Clone. All rights reserved.</p>
    </footer>
    <script>
        document.getElementById("paymentForm").addEventListener("submit", async function(event) {
            event.preventDefault();

            const movieTitle = "<%= movie.title %>";

            const proceed = confirm("Are you sure you want to buy the ticket?");

            if (!proceed) {
                return alert("Request was not processed");
            }

            if (!movieTitle) {
                return alert("Email and movie title are required!");
            }

            try {
                const response = await fetch("/pay", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ movieTitle })
                });

                const result = await response.json();
                alert(result.message);
            } catch (error) {
                console.error("Payment request failed", error);
                alert("Something went wrong. Please try again!");
            }
        });
    </script>
</body>
</html>